<h1>Burgers fo all!</h1>



<div class="parent-burger-container">
  <div class='w-50 burger-noteat-container flex'>
    <h2>Burgers not eaten!</h2>

    <ul class="burger-noteat-burger flex">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class='w-50 burger-eat-container flex'>
    <h2>Burgers have been devoured!</h2>
    <ul class="burger-eat-burger flex">
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>



<h2>Add a Burger</h2>
<form class="create-form inline w-100 h-auto">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
